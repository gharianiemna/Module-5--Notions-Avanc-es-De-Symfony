<!DOCTYPE html>
<html>
	<head>
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
		           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<link
			rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
		{#{{ encore_entry_link_tags('app') }}#}


<link
rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jq-3.2.1/dt-1.10.16/datatables.min.css"/>




		{% endblock %}

		{% block javascripts %}
<script type="text/javascript" src="https://cdn.datatables.net/v/dt/jq-3.2.1/dt-1.10.16/datatables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script type="text/javascript" src="https://cdn.datatables.net/v/dt/jq-3.2.1/dt-1.10.16/datatables.min.js"></script>

		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-light  {{ app.session.flashbag.peek('success')|length > 0 ? '' : 'mb-5' }}">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item">
					<a class="navbar-brand" href="/">Home</a>

				</li>
				{% if app.user %}
					<li class="nav-item  active">
						<a class="nav-link" href="{{ path('user') }}">User</a>
					</li>
				{% if app.user.email == 'ADMIN@ADMIN.COM' %}
					<li class="nav-item  active">
						<a class="nav-link" href="{{ path('admin') }}">Admin</a>
					</li>
				{% endif %}
				{% endif %}

			</ul>

			<ul class="navbar-nav ml-auto">
				{% if app.user %}	
					<li class="nav-item  mr-sm-2">
						<a class="nav-link" href="{{ path('app_logout') }}">LogOut</a>
					</li>
				{% else %}
					<li class="nav-item active"></li>

						<a class="nav-link" href="/Register">SignUp</a>
					</li>
					<li class="nav-item active"></li>
						<a class="nav-link " href="{{ path('app_login') }}">LogIn</a>
					</li>
					{% endif %}
			</ul>
		</nav>

			
			 {% block body %}{% endblock %}
	



			</body>
</html>
