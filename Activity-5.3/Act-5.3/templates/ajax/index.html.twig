	</div>

{% endblock %}
{% block javascripts %}
	<script>

		$(document).ready(function () {
$("#loadstudent").on("click", function (event) {
$.ajax({
url: '/ajax',
type: 'POST',
dataType: 'json',
async: true,


success: function (data, status) {
var e = $('<tr><th>Name</th><th>Address</th></tr>');
$('#user').html('');
$('#user').append(e);
},
error: function (xhr, textStatus, errorThrown) {
alert('Ajax request failed.');
}
});
});
});
